# Database
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/inventory_mgmt"

# Authentication
# Next.js base URL (development: http://localhost:3000, production: your domain)
NEXTAUTH_URL="http://localhost:3000"
# Secret key for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# OAuth Providers (Optional for development)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AWS Services (Optional for development)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="inventory-photos-dev"
AWS_CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# Redis Cache (Optional for development)
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Payment Processing (Optional for development)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# External Services (Optional for development)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENTRY_DSN="your-sentry-dsn-url"
POSTHOG_KEY="your-posthog-project-key"

# Application Environment
NODE_ENV="development"
VERCEL_ENV="development"